extends layout
block content
  script(src="/javascripts/pollData.js")
  script(src="https://code.highcharts.com/highcharts.js")
  script(src="https://code.highcharts.com/modules/exporting.js")
  div(class="row")
    div(class="col-md-4 col-md-offset-4")
      form(id="titleSelectForm" action="/polls/new" method="get")
        label(for="titleSelect" class="titleSelector") Select Poll Data 
        select(name="titleSelect" id="titles" selected="Select Poll" class="titleSelector btn btn-default dropdown-toggle form-control home-pad")
  div(class="row news-contain")
    div(class="col-md-12")
      if headlines
        h3(class="text-center font-green")= searchString
      div(id="container" class="col-md-offset-3 col-md-6")
      div(class="row")
        div(class="col-md-12")
          if headlines
            div(class="row")
              div(class="col-md-4 font-green col-md-offset-4 text-center")
                h3 RELATED HEADLINES
            each headline in headlines
              div(class="col-md-5 articles text-center")
                h5
                  span
                      a(href=headline.web_url target="_blank")= headline.headline.main
                //- h6= headline.pub_date
                div(class="row")
                  div(class="col-md-5 col-md-offset-1 text-left")
                    h6= headline.snippet
                  div(class="col-md-5")
                    each url in headline.multimedia
                      if url.width == 190  
                        img(src="http://www.nytimes.com/" + url.url)
                div(class="text-center")
                  a(href=headline.web_url target="_blank")= headline.source
  div(class="row footer bg-white")
    div(class="col-md-12")
